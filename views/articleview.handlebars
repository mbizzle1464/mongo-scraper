
{{> jumbotron}}


<div class="container-fluid">
    <div class="row d-flex">
        <div class="col-lg-4 col-md-5 d-flex current-article-card">
            <div class="card w-100">
                <img class="card-img-top" src="{{article.img}}" alt="Card image cap">
                <div class="card-body d-flex align-items-center">
                    <div>
                        <h5>{{article.title}}</h5>
                        <p class="card-text">{{article.category}}</p>
                    <a href="https://www.usatoday.com/story/sports{{link}}" target="_blank" class="btn btn-primary">View Article</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-8 col-md-7 d-flex">
            {{> articleview-parts/add-comment}}
        </div>
    </div>

    <div class="row mt-20-row">
        <div class="col">
            <div class="card">
                <h4 class="card-header">
                    Comments
                </h4>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        {{#each article.comments}}
                        <li class="list-group-item">
                            {{> articleview-parts/comment}}
                        </li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>